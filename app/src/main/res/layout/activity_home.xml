<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:background="#FDECEC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- HEADER MERAH -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:gravity="center"
            android:background="#BD1111"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pantauan Kondisi"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />
            <TextView
                android:id="@+id/textLokasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pantauan Kondisi"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <!-- BAGIAN DALAM -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">

            <!-- Tanggal dan Waktu -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <ImageView
                    android:layout_width="47dp"
                    android:layout_height="43dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/calendar" />

                <TextView
                    android:id="@+id/tvDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:text="Loading..." />
            </LinearLayout>

            <!-- KARTU STATUS -->
            <LinearLayout
                android:id="@+id/cardStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/rounded_white"
                android:padding="16dp"
                android:elevation="4dp"
                android:layout_marginBottom="16dp">

                <!-- Ikon Status -->
                <ImageView
                    android:id="@+id/imgStatusIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/check_green"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status"
                        android:textStyle="bold"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading..."
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/cardMap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_white"
                android:elevation="4dp"
                android:padding="8dp">

                <org.osmdroid.views.MapView
                    android:id="@+id/map"
                    android:layout_width="match_parent"
                    android:layout_height="320px" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabMaps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/map"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="false"
                    android:layout_margin="4dp"
                    android:clickable="true"
                    android:tint="@color/white"
                    app:backgroundTint="@color/red_main"
                    app:backgroundTintMode="add"
                    app:fabCustomSize="32dp"
                    app:rippleColor="@color/white"
                    app:srcCompat="@drawable/ic_fullscreen_white" />


            </RelativeLayout>




            <!-- KARTU STATUS SENSOR -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_white"
                android:padding="16dp"
                android:elevation="4dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Status Sensor"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#BD1111"
                    android:layout_marginBottom="12dp" />

                <!-- API -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/logoapi2" />

                    <TextView
                        android:id="@+id/tvApiStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Menunggu data..."
                        android:textColor="#000000"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- SUHU -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/suhu" />

                    <TextView
                        android:id="@+id/tvTemperature"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Menunggu data..."
                        android:textColor="#000000"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- GAS -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/asap" />

                    <TextView
                        android:id="@+id/tvGasStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Menunggu data..."
                        android:textColor="#000000"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

            <!-- BUTTON HISTORY -->
            <Button
                android:id="@+id/btnNotificationHistory"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Riwayat Notifikasi"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:backgroundTint="#BD1111"
                android:layout_marginTop="20dp"
                android:drawableStart="@drawable/bell"
                android:padding="10dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
